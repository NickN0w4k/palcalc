<UserControl x:Class="PalCalc.UI.View.Main.PalTargetListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PalCalc.UI.View.Main"
             xmlns:vm="clr-namespace:PalCalc.UI.ViewModel"
             xmlns:mvm="clr-namespace:PalCalc.UI.ViewModel.Mapped"
             xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:PalTargetListViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="SaveGame neu laden" 
                        Command="{Binding ReloadSaveCommand}"
                        IsEnabled="{Binding HasSaveGameLoaded}"
                        Padding="5,2"
                        Margin="0,0,5,0"
                        ToolTip="Ladet das SaveGame neu und aktualisiert alle Daten" />
            </StackPanel>
        </StackPanel>

        <!-- Tab Control: Zuchtziele vs. Erreichbare Pals -->
        <TabControl Grid.Row="1" Margin="5">
            <!-- Tab 1: Zuchtziele -->
            <TabItem Header="Zuchtziele" Padding="10,5">
                <ListBox x:Name="PalTargetListBox"
                         ItemsSource="{Binding Targets}" 
                         SelectedValue="{Binding SelectedTarget, Mode=TwoWay}"
                         SelectionChanged="PalTargetListBox_SelectionChanged"
                         dd:DragDrop.IsDragSource="True"
                         dd:DragDrop.IsDropTarget="True"
                         dd:DragDrop.DragHandler="{Binding}"
                         dd:DragDrop.DropHandler="{Binding}"
                         Style="{StaticResource {x:Type ListBox}}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="mvm:PalSpecifierViewModel">
                            <local:PalSpecifierView DataContext="{Binding}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                                    <Setter Property="dd:DragDrop.DragSourceIgnore" Value="True" />
                                </DataTrigger>
                            </Style.Triggers>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </TabItem>

            <!-- Tab 2: Erreichbare Pals -->
            <TabItem Header="Erreichbare Pals" Padding="10,5">
                <local:ReachablePalsView DataContext="{Binding ReachablePalsVm}" />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
