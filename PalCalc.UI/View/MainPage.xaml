<Page x:Class="PalCalc.UI.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:PalCalc.UI"
      xmlns:v="clr-namespace:PalCalc.UI.View.Main"
      xmlns:vm="clr-namespace:PalCalc.UI.ViewModel"
      xmlns:itl="clr-namespace:PalCalc.UI.Localization"
      xmlns:c="clr-namespace:PalCalc.UI.ViewModel.Converters"
      xmlns:b="clr-namespace:PalCalc.UI.ViewModel.Behaviors"
      xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
      xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
      xmlns:vu="clr-namespace:PalCalc.UI.View.Utils"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d"
      d:Width="1280" d:Height="720"
      VerticalAlignment="Stretch"
      HorizontalAlignment="Stretch"
      d:DataContext="{d:DesignInstance vm:MainWindowViewModel, IsDesignTimeCreatable=True}" d:DesignHeight="1351" d:DesignWidth="1659">
    <Page.Resources>
        <c:ValueVisibilityConverter x:Key="VVC" />
        <c:ValueBoolConverter x:Key="NegatedVBC" Negate="True" />

        <!-- Modern UI Styles -->
        <Style x:Key="ModernExpanderStyle" TargetType="Expander" BasedOn="{StaticResource {x:Type Expander}}">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="ModernGroupBoxStyle" TargetType="GroupBox" BasedOn="{StaticResource {x:Type GroupBox}}">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="ModernButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="MinHeight" Value="38" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="16,8" />
        </Style>

        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="ModernLabelStyle" TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
    </Page.Resources>
    <Border Padding="8">
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="{DynamicResource {x:Static adonisUi:Brushes.Layer2BackgroundBrush}}" Height="36">
                <MenuItem Header="{itl:LocalizedText LC_LANGUAGE}" ItemsSource="{Binding Locales}" Padding="8" FontSize="14">
                    <MenuItem.ItemContainerStyle>
                        <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}">
                            <Setter Property="Header" Value="{Binding Label}" />
                            <Setter Property="IsCheckable" Value="True" />
                            <Setter Property="IsChecked" Value="{Binding IsSelected}" />
                            <Setter Property="Command" Value="{Binding SelectCommand}" />
                            <Setter Property="FontSize" Value="13" />
                        </Style>
                    </MenuItem.ItemContainerStyle>
                </MenuItem>
            </Menu>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="240" Width="400"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="232*" MinWidth="280" />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="50*" MinWidth="300"/>
                </Grid.ColumnDefinitions>
                <!-- Left-hand Pane -->
                <DockPanel Grid.Column="0">
                    <StackPanel DockPanel.Dock="Top" vu:StackPanelExtensions.Spacing="8">
                        <!-- "Save File" section -->
                        <Expander Header="{itl:LocalizedText LC_SAVE_FILE}" 
                                  IsExpanded="True" 
                                  adonisExtensions:LayerExtension.IncreaseLayer="True"
                                  Style="{StaticResource ModernExpanderStyle}">
                            <v:SaveSelectorView DataContext="{Binding SaveSelection}" AllowNavigation="{Binding RelativeSource={RelativeSource AncestorType=local:MainPage}, Path=DataContext.SolverQueue.QueuedItems.Count, Converter={StaticResource NegatedVBC}}" />
                        </Expander>

                        <!-- "Game Settings" section -->
                        <Expander Header="{itl:LocalizedText LC_GAME_SETTINGS}" 
                                  IsExpanded="True" 
                                  adonisExtensions:LayerExtension.IncreaseLayer="True"
                                  Style="{StaticResource ModernExpanderStyle}">
                            <v:GameSettingsView DataContext="{Binding SelectedGameSettings}" />
                        </Expander>
                    </StackPanel>

                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition MinHeight="120" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- "Target Pals" section -->
                        <GroupBox Header="{itl:LocalizedText LC_TARGET_PALS}" 
                                  Grid.Row="0"
                                  Style="{StaticResource ModernGroupBoxStyle}">
                            <v:PalTargetListView BorderThickness="0" DataContext="{Binding PalTargetList}" />
                        </GroupBox>

                        <Grid Visibility="{Binding SolverQueue.QueuedItems.Count, Converter={StaticResource VVC}}" Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <GridSplitter Grid.Row="0" Background="{x:Null}" Height="6" ResizeBehavior="CurrentAndNext" IsEnabled="{Binding ElementName=JobQueueExpander, Path=IsExpanded}" />

                            <!-- "Jobs" section -->
                            <Expander Header="{Binding SolverQueue.SectionTitleWithCount.Value}"
                                      Grid.Row="1"
                                      Visibility="{Binding SolverQueue.QueuedItems.Count, Converter={StaticResource VVC}}"
                                      IsExpanded="True"
                                      VerticalContentAlignment="Stretch"
                                      adonisExtensions:LayerExtension.IncreaseLayer="True"
                                      Name="JobQueueExpander"
                                      Style="{StaticResource ModernExpanderStyle}"
                                      >
                                <i:Interaction.Behaviors>
                                    <b:ExpanderGridRowResetBehavior TargetGridRowIndex="1" ExpandedMinHeight="120" />
                                </i:Interaction.Behaviors>
                                <ScrollViewer>
                                    <v:SolverQueueView DataContext="{Binding SolverQueue}" />
                                </ScrollViewer>
                            </Expander>
                        </Grid>
                    </Grid>
                </DockPanel>

                <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

                <!-- Center Pane -->
                <DockPanel Grid.Column="2">
                    <!-- Solver controls at the top -->
                    <v:SolverControlsView DockPanel.Dock="Top" 
                                          DataContext="{Binding SolverControls}" 
                                          Margin="0,0,0,8" 
                                          Padding="10" 
                                          HorizontalContentAlignment="Right" 
                                          Background="{DynamicResource ResourceKey={x:Static adonisUi:Brushes.Layer1BackgroundBrush}}" 
                                          adonisExtensions:LayerExtension.IncreaseLayer="True" />

                    <!-- Progress bar at the bottom -->
                    <StackPanel DockPanel.Dock="Bottom"
                                Visibility="{Binding PalTarget.CurrentPalSpecifier.LatestJob, Converter={StaticResource VVC}, FallbackValue=Collapsed, Mode=OneWay}"
                                >
                        <Grid Height="32" Margin="0,2">
                            <ProgressBar Value="{Binding PalTarget.CurrentPalSpecifier.LatestJob.SolverProgress, Mode=OneWay}" 
                                         adonisExtensions:ProgressBarExtension.IsProgressAnimationEnabled="False"
                                         Height="32" />
                            <TextBlock Text="{Binding PalTarget.CurrentPalSpecifier.LatestJob.SolverStatusMessage.Value}" 
                                       Margin="12,6" 
                                       FontSize="13"
                                       FontWeight="Medium" />
                        </Grid>
                        <Grid Height="32" Margin="0,2,0,4">
                            <ProgressBar Value="{Binding PalTarget.CurrentPalSpecifier.LatestJob.StepProgress, Mode=OneWay}" 
                                         adonisExtensions:ProgressBarExtension.IsProgressAnimationEnabled="False"
                                         Height="32" />
                            <TextBlock Text="{Binding PalTarget.CurrentPalSpecifier.LatestJob.StepStatusMessage.Value}" 
                                       Margin="12,6" 
                                       FontSize="13"
                                       FontWeight="Medium" />
                        </Grid>
                    </StackPanel>

                    <!-- Graph view -->
                    <v:BreedingResultView DataContext="{Binding PalTarget.CurrentPalSpecifier.CurrentResults.SelectedResult}" />
                </DockPanel>

                <GridSplitter Grid.Column="3" Width="6" HorizontalAlignment="Center" VerticalAlignment="Stretch" />

                <!-- Right-hand Pane -->
                <Grid Grid.Column="4">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- "Target Pal" section -->
                    <Expander Header="{itl:LocalizedText LC_TARGET_PAL}"
                              Grid.Row="0"
                              IsExpanded="True"
                              adonisExtensions:LayerExtension.IncreaseLayer="True"
                              Style="{StaticResource ModernExpanderStyle}"
                              >
                        <Border IsEnabled="{Binding PalTarget.CanEdit}">
                            <v:PalTargetView DataContext="{Binding PalTarget}" />
                        </Border>
                    </Expander>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="32*" />
                        </Grid.RowDefinitions>

                        <!-- "Source Pals" section -->
                        <Expander Header="{itl:LocalizedText LC_SOURCE_PALS}" 
                                  Grid.Row="0" 
                                  Margin="0,8,0,0" 
                                  Padding="0" 
                                  IsExpanded="True" 
                                  Name="SourcePalsExpander" 
                                  VerticalContentAlignment="Stretch" 
                                  adonisExtensions:LayerExtension.IncreaseLayer="True"
                                  Style="{StaticResource ModernExpanderStyle}">
                            <i:Interaction.Behaviors>
                                <b:ExpanderGridRowResetBehavior TargetGridRowIndex="0" ExpandedMinHeight="140" />
                            </i:Interaction.Behaviors>

                            <ScrollViewer Padding="0">
                                <Grid IsEnabled="{Binding PalTarget.CanEdit}" VerticalAlignment="Stretch" Margin="{adonisUi:Space 1, 1}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" vu:StackPanelExtensions.Spacing="10">
                                        <Label Content="{itl:LocalizedText Code=LC_SOURCE_PALS_FILTERS}" Style="{StaticResource ModernLabelStyle}" />
                                        <StackPanel vu:StackPanelExtensions.Spacing="7">
                                            <CheckBox VerticalAlignment="Center" 
                                                      IsChecked="{Binding PalTarget.CurrentPalSpecifier.IncludeGlobalStoragePals}"
                                                      Style="{StaticResource ModernCheckBoxStyle}">
                                                <TextBlock Text="{itl:LocalizedText Code=LC_INCLUDE_PALS_GPS}" TextWrapping="Wrap" />
                                            </CheckBox>

                                            <CheckBox VerticalAlignment="Center" 
                                                      IsChecked="{Binding PalTarget.CurrentPalSpecifier.IncludeBasePals}"
                                                      Style="{StaticResource ModernCheckBoxStyle}">
                                                <TextBlock Text="{itl:LocalizedText LC_INCLUDE_PALS_AT_BASE}" TextWrapping="Wrap" />
                                            </CheckBox>

                                            <CheckBox VerticalAlignment="Center" 
                                                      IsChecked="{Binding PalTarget.CurrentPalSpecifier.IncludeCagedPals}"
                                                      Style="{StaticResource ModernCheckBoxStyle}">
                                                <TextBlock Text="{itl:LocalizedText Code=LC_INCLUDE_PALS_IN_CAGES}" TextWrapping="Wrap" />
                                            </CheckBox>

                                            <CheckBox VerticalAlignment="Center" 
                                                      IsChecked="{Binding PalTarget.CurrentPalSpecifier.IncludeCustomPals}"
                                                      Style="{StaticResource ModernCheckBoxStyle}">
                                                <TextBlock Text="{itl:LocalizedText Code=LC_INCLUDE_CUSTOM_PALS}" TextWrapping="Wrap" />
                                            </CheckBox>

                                            <CheckBox VerticalAlignment="Center" 
                                                      IsChecked="{Binding PalTarget.CurrentPalSpecifier.IncludeExpeditionPals}"
                                                      Style="{StaticResource ModernCheckBoxStyle}">
                                                <TextBlock Text="{itl:LocalizedText Code=LC_INCLUDE_PALS_ON_EXPEDITIONS}" TextWrapping="Wrap" />
                                            </CheckBox>
                                        </StackPanel>
                                    </StackPanel>

                                    <Separator Grid.Row="1" Visibility="Hidden" Margin="0,12,0,12" />

                                    <StackPanel Grid.Row="2" vu:StackPanelExtensions.Spacing="8">
                                        <Label Content="{itl:LocalizedText Code=LC_SOURCE_PALS_PLAYERS_AND_GUILDS}" Style="{StaticResource ModernLabelStyle}" />
                                        <v:PalSourceTreeView DataContext="{Binding PalTarget.PalSource}">
                                            <v:PalSourceTreeView.Resources>
                                                <Style TargetType="TreeView" BasedOn="{StaticResource {x:Type TreeView}}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="TreeView">
                                                                <Border Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            CornerRadius="{TemplateBinding adonisExtensions:CornerRadiusExtension.CornerRadius}"
                                                                            Padding="{TemplateBinding Padding}">
                                                                    <!-- Remove ScrollViewer that normally wraps this, so it doesn't interfere with the ScrollViewer containing this whole section -->
                                                                    <ItemsPresenter />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </v:PalSourceTreeView.Resources>
                                        </v:PalSourceTreeView>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>
                        </Expander>

                        <GridSplitter IsEnabled="{Binding ElementName=SourcePalsExpander, Path=IsExpanded}" 
                                      Grid.Row="1" 
                                      Background="{x:Null}" 
                                      Height="6" 
                                      HorizontalAlignment="Stretch" 
                                      VerticalAlignment="Center" />

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock TextWrapping="Wrap" 
                                       Visibility="{Binding ShowNoResultsNotice, Converter={StaticResource VVC}, FallbackValue=Collapsed}" 
                                       Grid.Row="0" 
                                       Padding="8"
                                       FontSize="13">
                                <Run Text="{itl:LocalizedText Code=LC_NO_RESULTS_FAQ_1}" />
                                <Hyperlink NavigateUri="https://github.com/tylercamp/palcalc/wiki/Frequently-Asked-Questions#why-arent-i-getting-any-results"
                                           RequestNavigate="Hyperlink_RequestNavigate">
                                    <Run Text="{itl:LocalizedText Code=LC_NO_RESULTS_FAQ_2}" />
                                </Hyperlink>
                                <Run Text="{itl:LocalizedText Code=LC_NO_RESULTS_FAQ_3}" />
                            </TextBlock>

                            <!-- Solver Results -->
                            <GroupBox Header="{Binding PalTarget.CurrentPalSpecifier.CurrentResults.ResultsHeading.Value, FallbackValue=''}" 
                                      Grid.Row="1"
                                      Style="{StaticResource ModernGroupBoxStyle}">
                                <v:BreedingResultListView BorderThickness="0" DataContext="{Binding PalTarget.CurrentPalSpecifier.CurrentResults}" />
                            </GroupBox>
                        </Grid>
                    </Grid>

                    <!-- About button / Update Notice -->
                    <StackPanel Grid.Row="2" Margin="0,8,0,0">
                        <Button Width="Auto" 
                                Click="AboutButton_Click" 
                                Margin="0,0,0,8" 
                                Content="{itl:LocalizedText LC_ABOUT_APP}"
                                Style="{StaticResource ModernButtonStyle}" />
                        <TextBlock Visibility="{Binding UpdatesMessageVisibility}" 
                                   TextWrapping="Wrap" 
                                   TextAlignment="Center" 
                                   FontSize="16"
                                   FontWeight="Medium">
                            <!-- NavigateUri unused, value must be set for event to trigger -->
                            <Hyperlink NavigateUri="http://github.com" RequestNavigate="DownloadUpdateLink_RequestNavigate">
                                <TextBlock Text="{itl:LocalizedText LC_UPDATE_AVAILABLE}" />
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Grid>
        </DockPanel>
    </Border>
</Page>
